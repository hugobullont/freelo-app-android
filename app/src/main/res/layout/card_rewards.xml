<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Modificar los card! NO OLVIDAR-->
        <ImageView
            android:id="@+id/pictureRImageView"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/nameRTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pictureRImageView"
            android:text="@string/sample_name"
            android:textStyle="bold|italic"
            android:layout_margin="@dimen/default_margin" />
        <TextView
            android:id="@+id/descriptionRTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_description"
            app:layout_constraintTop_toBottomOf="@id/nameRTextView"
            app:layout_constraintStart_toEndOf="@id/pictureRImageView"
            android:textStyle="bold|italic"
            android:layout_margin="@dimen/default_margin"/>
        <TextView
            android:id="@+id/priceRTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_priece"
            app:layout_constraintTop_toBottomOf="@id/descriptionRTextView"
            app:layout_constraintStart_toEndOf="@id/pictureRImageView"
            android:textStyle="bold|italic"
            android:layout_margin="@dimen/default_margin"/>

        <TextView
            android:id="@+id/quantityRTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_quantity"
            app:layout_constraintTop_toBottomOf="@id/priceRTextView"
            app:layout_constraintStart_toEndOf="@id/pictureRImageView"
            android:textStyle="bold|italic"
            android:layout_margin="@dimen/default_margin"/>

        <Button
            android:id="@+id/buttonR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quantityRTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorTextWhite"
            android:textStyle="bold|normal"
            android:backgroundTint="@color/colorPrimary"
            android:layout_margin="@dimen/default_margin"
            android:drawableLeft="@drawable/ic_add_box_white_24dp"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>